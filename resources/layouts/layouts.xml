<layouts>
    <layout id="MainLayout">
        <drawable class="background" />

        <!-- Clock and time -->
        <label id="clock" x="center" y="8%" font="Gfx.FONT_SMALL"
            justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
        <label id="timer" x="center" y="18%" font="Gfx.FONT_SMALL"
            justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

        <!-- Heart Rate indicators -->
        <drawable class="HeartRateDisplay" id="curHR" x="20%" y="20%" />
        <drawable class="HeartRateDisplay" id="avgHR" x="80%" y="20%" />

        <!-- Arc indicators -->
        <drawable class="ProgressArcBar" id="batterybar">
            <param name="color">Gfx.COLOR_GREEN</param>
            <param name="borderColor">Gfx.COLOR_DK_GREEN</param>
            <param name="clockwise">true</param>
            <param name="thickness">5</param>
        </drawable>
        <drawable class="ProgressArcBar" id="gpsbar">
            <param name="color">Gfx.COLOR_BLUE</param>
            <param name="borderColor">Gfx.COLOR_DK_BLUE</param>
            <param name="clockwise">false</param>
            <param name="thickness">5</param>
        </drawable>
    </layout>
</layouts>
